<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--溢出菜单背景色-->
        <item name="android:itemBackground">?attr/colorPrimary</item>
        <!-- 溢出菜单 字体颜色 -->
        <!--  高版本api 上，需要这样设置，否则没效果-->
        <!--<item name="android:textAppearanceLargePopupMenu">@style/textAppearanceLargePopupMenu</item>-->
        <!-- 低版本api-->
        <item name="textAppearanceLargePopupMenu">@style/textAppearanceLargePopupMenu</item>
        <!-- Material Theme -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/text_blue</item>
        <item name="colorPrimaryDark">@color/text_blue</item>
        <!--比如progressbar颜色-->
        <item name="colorAccent">@color/text_blue</item>
        <!--返回或更多的按钮颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- Material Theme end-->
    </style>

    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/text_yellow</item>
        <item name="android:textColor">@color/text_yellow</item>
    </style>

    <style name="textAppearanceLargePopupMenu" parent="TextAppearance.Widget.AppCompat.ExpandedMenu.Item">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否模糊 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
